<% title t('.page_title') %>

<% step_header(path: previous_decision_step_path) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= govuk_error_summary(@form_object) %>
    <%= step_form @form_object do |f| %>
      <div class="govuk-form-group">
        <div class="govuk-date-input__item">
          <div class="moj-datepicker" data-module="moj-date-picker">
            <%= f.govuk_text_field :date_received, label: { size: 'xl', text: t(".date_received.#{@form_object.request_type}") }, class: 'moj-js-datepicker-input' %>
          </div>
        </div>
      </div>
      <%= f.continue_button(primary: :save_and_continue, secondary: false) %>
    <% end %>
  </div>
</div>
