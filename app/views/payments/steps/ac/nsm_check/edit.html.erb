<% title t('.page_title') %>

<% step_header(path: payments_requests_path) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= govuk_error_summary(@form_object) %>
    <%= step_form @form_object do |f| %>
      <%= f.govuk_radio_buttons_fieldset :assigned_counsel_nsm, legend: { size: 'xl' } do %>
        <%= f.govuk_radio_button :linked_to_nsm, true, label: { text: t('shared.true' ) } %>
        <%= f.govuk_radio_button :linked_to_nsm, false, label: { text: t('shared.false' ) } %>
      <% end %>
      <%= f.continue_button(secondary: false) %>
    <% end %>
  </div>
</div>
