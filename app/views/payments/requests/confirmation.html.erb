<% title t('.page_title') %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <div class="govuk-panel govuk-panel--confirmation">
      <h1 class="govuk-panel__title">
        <%= t('.payment_request_complete') %>
      </h1>
      <div class="govuk-panel__body">
        <%= t('.reference', laa_reference: @payment_confirmation.laa_reference) %>
      </div>
    </div>
    <dl class="govuk-summary-list">
      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">
          <%= t('.payment_type') %>
        </dt>
        <dd class="govuk-summary-list__value">
          <%= @payment_confirmation.claim_type %>
        </dd>
      </div>
      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">
          <%= t('.allowed_costs') %>
        </dt>
        <dd class="govuk-summary-list__value">
          <%= @payment_confirmation.amount_allowed %>
        </dd>
      </div>
    </dl>

    <div class="govuk-button-group">
      <%= govuk_link_to( t(".create_new_payment_request"), new_payments_request_path, class: "govuk-button") %>
      <%= govuk_link_to( t(".return_to_your_claims"), your_nsm_claims_path) %>
    </div>
  </div>
</div>
