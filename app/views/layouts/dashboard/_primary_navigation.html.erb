<div class="govuk-service-navigation">
  <div class="govuk-width-container">
    <div class="govuk-service-navigation__container">
      <span class="govuk-service-navigation__service-name">
        <%= link_to t('dashboards.service_name'), dashboard_path,
                      class: 'govuk-service-navigation__link', id: 'header-service-name' %>
      </span>
      <div class="govuk-service-navigation__nav">
        <nav class="govuk-service-navigation__wrapper" aria-label="Primary navigation">
          <ul class="govuk-service-navigation__list">
            <li class="govuk-service-navigation__item <%= 'govuk-service-navigation__item--active' if @nav_select == 'prior_authority' %>">
              <%= link_to t('.prior_authority'), new_dashboard_path(nav_select: 'prior_authority'), class: 'govuk-service-navigation__link', 'aria-current': ('page' if @nav_select == 'prior_authority') %>
            </li>
            <li class="govuk-service-navigation__item <%= 'govuk-service-navigation__item--active' if @nav_select == 'nsm' %>">
              <%= link_to t('.nsm'), new_dashboard_path(nav_select: 'nsm'), class: 'govuk-service-navigation__link', 'aria-current': ('page' if @nav_select == 'nsm') %>
            </li>
            <li class="govuk-service-navigation__item <%= 'govuk-service-navigation__item--active' if @nav_select == 'search' %>">
              <%= link_to t('.search'), new_dashboard_path(nav_select: 'search'), class: 'govuk-service-navigation__link', 'aria-current': ('page' if @nav_select == 'search') %>
            </li>
            <li class="govuk-service-navigation__item service-switch-navigation__item">
              <%= link_to t('assess_a_crime_form.switch_service'), root_path, class: 'govuk-link--no-visited-state' %>
            </li>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</div>
