  <ul class="moj-sub-navigation__list">
    <li class="moj-sub-navigation__item">
      <%= link_to t('.claim_details'), nsm_claim_claim_details_path(claim), class: 'moj-sub-navigation__link', 'aria-current': (current_page == 'claim_details' ? "page" : nil) %>
